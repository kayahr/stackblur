    "devDependencies": {
        "@kayahr/eslint-config": "3.3.0",
        "@kayahr/vitest-matchers": "1.1.0",
        "@types/jest-image-snapshot": "6.4.0",
        "@types/node": "22.13.5",
        "@vitest/coverage-v8": "~2.1.8",
        "cspell": "8.17.3",
        "jest-image-snapshot": "6.4.0",
        "npm-run-all": "4.1.5",
        "rimraf": "6.0.1",
        "sharp": "0.33.5",
        "typedoc": "0.27.6",
        "typescript": "5.7.3",
        "vitest": "~2.1.8"
