{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "ES2022",
            "ESNext.Decorators",
            "DOM"
        ],
        "module": "node20",
        "newLine": "lf",
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "./lib",
        "preserveSymlinks": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2022"
    },
    "include": [ "src" ],
    "exclude": [ "src/**/*.legacy.ts" ]
}
